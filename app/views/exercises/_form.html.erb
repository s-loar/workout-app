<div class="row">
  <div class="col-md-12">
    <%= form_for( [current_user, @exercise], :html => {class: "form-horizontal", role: "form"} ) do |f| %>
      <% if @exercise.errors.any? %>
        <div class="panel panel-danger col-md-offset-1">
          <div class="panel-heading">
            <h2 class="panel-title">
              <%= pluralize(@exercise.errors.count, "error") %>
              prohibited this exercise from being saved:
            </h2>
            <div class="panel-body">
              <ul>
                <% @exercise.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :duration_in_minutes, "Duration (min)" %>
        </div>
        <div class="col-md-11">
          <%= f.text_field :duration_in_minutes, class: 'form-control', placeholder: 'Duration in minutes', autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :workout, "Workout Details" %>
        </div>
        <div class="col-md-11">
          <%= f.text_field :workout, class: 'form-control', placeholder: 'Workout' %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :workout_date, "Activity Date" %>
        </div>
        <div class="col-md-11">
          <%= f.text_field :workout_date, class: 'form-control', placeholder: 'YYYY-MM-DD' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-1 col-md-11">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>

    <% end %>
  </div>
</div>
